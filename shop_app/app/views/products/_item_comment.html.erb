<li>
  <div class="row" style="margin-top: 10px; ">
    <div class="col-sm-2 text-right">
      <% if @service_user.current_user["avatar"] %>
        <%= image_tag(@service_user.current_user.avatar.url, 
          class: "img-circle profile_img_comment") %> 
      <% else %>  
        <%= image_tag("default-avatar.png", 
          class: "img-circle profile_img_comment")%>  
      <% end %>
    </div>  
    <div class="col-sm-10">
    <div>
      <span>
      <%= distance_of_time_in_words(Time.now,
            item_comment.created_at) %>
    </span>
    </div>
    <div><%= item_comment.content %></div>
    </div>
  </div>
</li>
