                  <div class="col-lg-6 col-sm-6 col-xs-6">
                    <div class="filterBox">
                      <%= form.select :size, @sizes.map { |size| [size.name] }, { include_blank: 'Size' }, { class: 'form-control' } %>
                    </div>
                  </div>
                  <div class="col-lg-6 col-sm-6 col-xs-6">
                    <div class="filterBox">
                      <%= form.select :type, @types.map { |type| [type.name] }, { include_blank: 'Type' }, { class: 'form-control' } %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="cart-actions">
                <div class="add to row">
                  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <%= form.hidden_field :product_id, value: @product.id %>
                    <%= form.hidden_field :quantity, value: 1 %>

                    <%= form.submit 'Add to Cart', class: 'btn btn-primary btn-fs' %>

