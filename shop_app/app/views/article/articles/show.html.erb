<% content_for :title, 'Article' %>
<% content_for :script, javascript_include_tag(:shop) %>
<div class="container main-container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6">
      <div class="main-image col-lg-12 no-padding">
      <a>
      <img src="http://res.cloudinary.com/hieugakt/image/upload/<%= @article[:image_link]%>"
      style="width: 500px">
      </a>
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-5">
      <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
          <h2><b><%= @article.title %></b></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <%= @article.content %>
        </div>
      </div>
      <div class="clear"></div>
      <div style="clear:both"></div>
      <div class="product-share clearfix">
        <p> SHARE </p>
        <div class="socialIcon">
          <a href="#"><i class="fab fa-facebook-f"></i></a> 
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-google-plus-g"></i></a> 
          <a href="#"><i class="fab fa-pinterest"></i></a>
        </div>
      </div>
    </div>
  </div>
  <div class="row" style="margin: 20px 0px">
      <div>
        <% if @service_user.current_user %>
          <%= render 'article/comments/form'%> 
        <% end %>
        <h2> COMMENTs </h2>
        <%= render 'article/comments/comment'%> 
          <div class="col-lg-12 text-center">
            <%= will_paginate(@comments, 
            renderer: BootstrapPagination::Rails) %>
          </div>
      </div>
    </div>
  </div>
</div>
<div style="clear:both"></div>
