<% content_for :title, 'Article' %>
<% content_for :script, javascript_include_tag(:shop) %>
<div class="row categoryProduct xsResponse clearfix"
  style="margin-bottom: 20px;">
  <div class="container main-container ">
    <% @articles.each do |article| %>
    <div class="row innerPage">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="row has-equal-height-child">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-xxs-12 is-equal">
            <div class="content-inner wow fadeInLeft" data-wow-duration=".8s" data-wow-delay="0">
            <img src="http://res.cloudinary.com/hieugakt/image/upload/<%= article[:image_link] %>"
            style="width: 500px;">
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-xxs-12 is-equal">
            <div class="hw100 display-table">
              <div class="hw100 display-table-cell">
                <div class="content-inner wow fadeInRight" data-wow-duration=".8s" data-wow-delay="0">
                  <div class="about-content-text">
                    <h3><%= article.title %></h3>
                    <p><%= article.content%></p>
                    <%= link_to article_path(article), class: "btn btn-more" do %>
                    See More 
                    <i class="fas fa-arrow-right"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>   
      </div>  
    </div>      
  <div style="clear:both"></div>
  <% end %>
</div>

</div>
<div class="row categoryFooter">
  <div class="col-lg-offset-4 col-lg-8 ">
    <%= will_paginate(@articles, renderer: BootstrapPagination::Rails) %>
  </div>
</div>
