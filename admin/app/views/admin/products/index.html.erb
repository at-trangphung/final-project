<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Manage products</h1>
    </div>
  </div>
  <div>
    <div class="col-lg-12">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel-heading">
          <%= link_to ("add new"), new_product_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <%= form_tag products_path(), method: :get do %>
      <div class="row" style="margin-bottom: 20px;">
        <div class=" col-sm-offset-4 col-lg-4" 
          style="padding-right: 0;"">
          <%= text_field_tag :search, params[:search], class: "form-control sinput",
          style: "margin-top:0", placeholder: "name" %>
        </div>
        <div class="col-lg-4"  style="padding-left: 0">
          <%= button_tag type: "submit", class: "btn btn-default" do %>
            <%= content_tag :i, "", class: "fa fa-search" %>
          <% end %>
        </div>  
      </div>
    <% end %>
    <div class="row">
      <div class="col-lg-12" id="list-product">
      <%= render "list_product" %>
      </div>
      <div class="col-lg-12 text-center">
        <%= will_paginate(@productList, renderer: BootstrapPagination::Rails)%>
      </div>
    </div>
  </div>  
</div>
