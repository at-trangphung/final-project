<%= form_with model: @product, local: true, class: 'form-horizontal', html: { role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name"%>
  </div>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_area :detail, class: "form-control", placeholder: "Detail product"%>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control", placeholder: "Price" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control", placeholder: "Quantity" %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "category" %>
    <%= f.collection_select :category_id, Category.where(parent_id:0), :id, :name, {}, class: "form-control" %>
  </div>
    <div class="col-sm-2">
      <%= link_to "Cancel" , products_path ,class: "btn btn-primary"%>
    </div>
    <div class="col-sm-offset-2 col-sm-2">
      <%= f.submit ("Save"),class: "btn btn-primary" %>
    </div>
<% end %>
