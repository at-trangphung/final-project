<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Manage product options</h1>
    </div>
  </div>
  <div class="col-lg-12">
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= yield %>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-heading">
        <%= link_to ("add new"), new_product_option_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <%= form_tag product_options_path(), method: :get do %>
    <div class="row" style="margin-bottom: 20px;">
      <div class=" col-sm-offset-4 col-lg-4" 
        style="padding-right: 0;"">
        <%= text_field_tag :search, params[:search], class: "form-control sinput",
          style: "margin-top:0", 
          placeholder: "name produt, size, type, price " %>
      </div>
      <div class="col-lg-4"  style="padding-left: 0">
        <%= button_tag type: "submit", class: "btn btn-default" do %>
          <%= content_tag :i, "", class: "fa fa-search" %>
        <% end %>
      </div>  
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h5> List product options </h5>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th class="text-center">id</th>
              <th class="text-center">product</th>
              <th class="text-center">image</th>
              <th class="text-center">type</th>
              <th class="text-center">size</th>
              <th class="text-center">price</th>
              <th class="text-center">function</th>
            </tr>
          </thead>
          <tbody>
            <% @id = 0 %>
            <%= render partial: "product_option", 
              collection: @product_options, local: @id %>
          </tbody>
        </table>
      </div>
      <div class="col-lg-12 text-center">
        <%= will_paginate(@product_options, 
            renderer: BootstrapPagination::Rails)%>
      </div>
    </div>
  </div>
</div>
